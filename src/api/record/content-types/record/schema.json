{
  "kind": "collectionType",
  "collectionName": "records",
  "info": {
    "singularName": "record",
    "pluralName": "records",
    "displayName": "Record"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "firstName": {
      "type": "string",
      "required": true,
      "maxLength": 50
    },
    "lastName": {
      "type": "string",
      "required": true,
      "maxLength": 50
    },
    "middleInitial": {
      "type": "string",
      "required": true,
      "maxLength": 1,
      "minLength": 1
    },
    "sex": {
      "type": "enumeration",
      "enum": [
        "MALE",
        "FEMALE",
        "OTHER"
      ],
      "required": true
    },
    "birthdate": {
      "type": "date",
      "required": true
    },
    "religion": {
      "type": "string"
    },
    "nationality": {
      "type": "string"
    },
    "address": {
      "type": "text",
      "required": true
    },
    "minor": {
      "type": "boolean",
      "default": false,
      "required": false
    },
    "patient": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "plugin::users-permissions.user"
    }
  }
}
